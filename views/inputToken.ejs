<!DOCTYPE html>
<html>
  <head>
    <title>QuickBooks Integration</title>
    <!-- Add Bootstrap CSS link -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- Add Font Awesome for the question mark icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      /* Add custom styles */
      body {
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
      }
      .form-container {
        background-color: #f5f5f5; /* Slightly darker background color */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin-top: 20px;
      }
      .submit-button {
        background-color: #00c853;
        border-color: #00c853;
      }
      /* Add styles for the icon */
      .input-group-icon {
        position: relative;
        display: flex;
        align-items: center;
      }
      .input-guide {
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 10px;
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 form-container">
          <center><h1>Welcome to QuickBooks Integration!</h1></center>
          <br />
          <!-- Welcome message -->
          <form method="post" action="/submit">
            <div class="form-group">
              <div class="input-group-icon">
                <label for="accessToken">Access Token:</label>

                <input
                  type="text"
                  placeholder="eyJhbGciOiJIUzI1NiJ9.eyJ0aWQiOjI3NTAyNDc4NCwiYWFpIjoxMSwidWlkIjo0NDUwNTExNCwiaWFkIjoiMjAyMy0wOC0xNFQxNzo0MzoyMS"
                  class="form-control"
                  id="accessToken"
                  name="accessToken"
                  required
                />
                &nbsp;
                <i class="fa fa-question-circle" id="icon"></i>
                <div class="input-guide" id="guide">
                  You can get your access token from
                  <a
                    href="https://techloyce393322.monday.com/apps/manage/tokens"
                    target="_blank"
                  >
                    monday Developer Center &gt;&gt; My access tokens
                  </a>
                </div>
              </div>
            </div>
            <br /><br />
            <center>
              <button type="submit" class="btn btn-primary submit-button">
                Submit
              </button>
            </center>
          </form>
        </div>
      </div>
    </div>

    <script>
      // JavaScript to toggle the guide visibility
      const icon = document.getElementById("icon");
      const guide = document.getElementById("guide");

      icon.addEventListener("click", () => {
        // Toggle guide visibility
        guide.style.display =
          guide.style.display === "block" ? "none" : "block";
      });
    </script>
  </body>
</html>
